@model Ogretmen
<h2>Öğretmen Silme</h2>
<hr />
<p>
    <b>@Model.Ad @Model.Soyad</b> isimli Öğretmeni silmek istiyormusun?
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model.OgretmenId" name="id">
        <button type="submit" class="btn btn-danger">Evet</button>
        <a asp-action="Index" class="btn btn-primary">Hayır</a>
    </form>
</p>