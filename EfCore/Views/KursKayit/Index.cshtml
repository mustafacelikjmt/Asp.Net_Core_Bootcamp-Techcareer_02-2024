@model IEnumerable<KursKayit>
<h2>Öğrenci Listesi</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.KayitId)</th>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.Ogrenci.OgrenciAd)</th>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.Kurs.Baslik)</th>
            <th style="width: 150px;">Ayarlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.Kurs.Baslik)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
