@model List<Post>
<div class="row">
    <div class="col-12">
        <h2>Post List</h2>
        <a href="/posts/create" class="btn btn-primary">New Post</a>
        <hr />
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th style="width: 125px;">Image</th>
                    <th>Title</th>
                    <th>IsActive</th>
                    <th style="width: 125px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="/img/@item.Image" class="img-fluid" alt=""></td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/posts/edit/@item.PostId" class="btn btn-primary btn-sm">Edit</a>
                            @if (User.FindFirstValue(ClaimTypes.Role) == "admin")
                            {
                                <a href="/posts/delete/@item.PostId" class="btn btn-danger btn-sm">Delete</a>
                            }
                            else
                            {
                                <a href="#" class="btn btn-danger btn-sm" style="background-color: grey;" disabled>Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>